{
  "name": "tailwind-css-playground",
  "description": "Tailwind example starter project",
  "scripts": {
    "serve": "cross-env NODE_ENV=development concurrently \"parcel public/index.pug\"",
    "development": "cross-env NODE_ENV=development postcss public/tailwind.css -o public/build/tailwind.css",
    "production": "cross-env NODE_ENV=production postcss public/tailwind.css -o public/build/tailwind.css",
    "start": "npm run serve"
  },
  "dependencies": {
    "autoprefixer": "^9.5.1",
    "tailwindcss": "^1.0"
  },
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^1.2.0",
    "concurrently": "^4.1.0",
    "cross-env": "^5.2.0",
    "cssnano": "^4.1.10",
    "live-server": "^1.2.1",
    "parcel-bundler": "^1.6.1",
    "postcss-cli": "^6.1.2",
    "pug": "^3.0.0",
    "sass": "^1.32.8",
    "tailwindcss-font-inter": "^2.0.0"
  }
}
